<resources>

    <!-- Base application theme. -->
    <style name="MvvmAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MvvmAppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="MvvmAppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MvvmAppTheme.AppBarOverlay.Light" parent="ThemeOverlay.AppCompat.ActionBar" />

    <style name="MvvmAppTheme.PopupOverlay.Light" parent="ThemeOverlay.AppCompat" />

</resources>
